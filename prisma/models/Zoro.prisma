model Zoro {
  id            String        @id
  title         String?   
  malID         Int? 
  alID          Int?          @unique
  japaneseTitle String?
  image         String?
  description   String?
  type          String?
  url           String?
  updatedAt DateTime @updatedAt
  subOrDub      String?
  hasSub        Boolean?
  hasDub        Boolean?
  status        String?
  season        String?
  totalEpisodes Int?
  episodes      EpisodeZoro[] @relation("EpisodeZoro")

  anilist Anilist? @relation(fields: [alID], references: [id])
}

model EpisodeZoro {
  id       String  @id
  number   Int?
  title    String?
  isFiller Boolean?
  isSubbed Boolean?
  isDubbed Boolean?
  url      String?

  zoro Zoro[] @relation("EpisodeZoro")
}
