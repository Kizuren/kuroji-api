model Zoro {
  /// @DtoReadOnly
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  id            String        @id
  title         String?
  malID         Int?
  alID          Int?          @unique
  japaneseTitle String?
  image         String?
  description   String?
  type          String?
  url           String?
  updatedAt     Int?
  subOrDub      String?
  hasSub        Boolean?
  hasDub        Boolean?
  status        String?
  season        String?
  totalEpisodes Int?
  /// @DtoRelationCanCreateOnCreate
  /// @DtoRelationCanConnectOnCreate
  episodes      EpisodeZoro[] @relation("EpisodeZoro")
  /// @DtoRelationCanConnectOnCreate
  anilist Anilist? @relation(fields: [alID], references: [id])
}

model EpisodeZoro {
  /// @DtoReadOnly
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  id       String   @id
  number   Int?
  title    String?
  isFiller Boolean?
  isSubbed Boolean?
  isDubbed Boolean?
  url      String?
  /// @DtoRelationCanConnectOnCreate
  zoro Zoro[] @relation("EpisodeZoro")
}
