model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usage ApiKeyUsage[]
}

model ApiKeyUsage {
  id        String   @id @default(cuid())
  apiKeyId  String
  endpoint  String
  method    String
  origin    String?
  userAgent String?
  ip        String?
  usedAt    DateTime @default(now())

  apiKey ApiKey @relation(fields: [apiKeyId], references: [id])
}
