{
  "name": "kuroji-api-v2",
  "type": "module",
  "scripts": {
    "prod": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "merge": "bun run prisma/merge.js",
    "reset": "bun run prisma migrate reset --force --schema=./prisma/schema.prisma",
    "migrate": "bun run prisma migrate deploy --schema=./prisma/schema.prisma",
    "migrate dev": "bun run prisma migrate dev --schema=./prisma/schema.prisma",
    "generate": "bun run prisma generate --schema=./prisma/schema.prisma",
    "mrgn": "bun run prisma/merge.js && bun run prisma generate --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "@hono/eslint-config": "^2.0.3",
    "@hono/standard-validator": "^0.1.5",
    "@hono/zod-openapi": "^1.1.3",
    "@hono/zod-validator": "^0.7.5",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@scalar/hono-api-reference": "^0.9.22",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.17.0",
    "hono": "^4.9.7",
    "hono-openapi": "^1.1.0",
    "ioredis": "^5.7.0",
    "ky": "^1.10.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "prettier": "^3.6.2",
    "prisma": "^7.0.1",
    "typescript": "^5.9.2"
  }
}
