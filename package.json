{
  "name": "kuroji-api-v2",
  "type": "module",
  "scripts": {
    "prod": "bun src/index.ts",
    "dev": "bun --hot src/index.ts",
    "merge": "bun prisma/merge.js",
    "reset": "bunx prisma migrate reset --force --schema=./prisma/schema.prisma",
    "migrate": "bunx prisma migrate deploy --schema=./prisma/schema.prisma",
    "migrate:dev": "bunx prisma migrate dev --schema=./prisma/schema.prisma",
    "generate": "bunx prisma generate --schema=./prisma/schema.prisma",
    "mrgn": "bun prisma/merge.js && bunx prisma generate --schema=./prisma/schema.prisma",
    "tsc": "tsc --noEmit --watch"
  },
  "dependencies": {
    "elysia": "^1.4.19",
    "@elysiajs/cors": "^1.2.1",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/openapi": "^1.4.12",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.18.0",
    "ioredis": "^5.8.2",
    "ky": "^1.14.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "typescript": "^5.9.3"
  }
}
